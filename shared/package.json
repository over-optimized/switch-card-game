{
  "name": "switch-shared",
  "version": "0.1.0",
  "description": "Shared types and utilities for Switch card game",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "test": "vitest --run",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vitest": "^1.3.1",
    "@vitest/coverage-v8": "^1.3.1"
  }
}