{
  "name": "switch-client",
  "version": "0.1.0",
  "description": "Switch card game client application",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm run clean && tsc && vite build",
    "build:prod": "pnpm run clean && tsc --noEmit && vite build --mode production",
    "clean": "rm -rf dist",
    "preview": "vite preview",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@vitejs/plugin-legacy": "^5.3.1",
    "@vitest/coverage-v8": "^1.3.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "socket.io-client": "^4.7.4",
    "switch-shared": "workspace:*"
  }
}
